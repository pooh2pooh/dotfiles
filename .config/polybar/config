;foreground = ${xrdb:color7:#222}
foreground = #002B36
foreground-alt = #BCC3C3
primary = #ffb52a
secondary = #dc322f
alert = #dc322f

[bar/bar1]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true
bottom = false
background = ${colors.background-alt}
foreground = ${colors.foreground-alt}

