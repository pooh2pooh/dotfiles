padding-right = 1

module-margin-left = 1.5
module-margin-right = 1.5

font-0 = Iosevka Nerd Font:size=14;0
font-1 = Weather Icons:size=13;1

modules-left = i3 memory spacer cpu spacer temperature spacer2 trash
modules-center = usdprice btcprice
modules-right = pulseaudio weather date_custom boost battery updates-arch-combined powermenu

tray-position = right
tray-padding = 7
;tray-background = #0063ff
tray-maxsize = 24

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = #i3.next
scroll-down = #i3.prev

cursor-click = pointer
;cursor-scroll = ns-resize

[module/spacer]
type = custom/script
exec = echo "%{F#666}|%{F-}"

[module/spacer2]
type = custom/script
exec = echo "%{F#666}:%{F-}"

[module/weather]
type = custom/script
exec = ~/.config/polybar/weather.sh
interval = 1800
label-font = 2

[module/date_custom]
type = custom/script
exec = LC_TIME=en_US.utf8 date +%a,\ %d\ %b\ %l:%M\ %p
interval = 60
label = "%output%"

[module/boost]
type = custom/script
exec = /home/pooh/.config/polybar/boost.sh
tail = true
label = "%output%"
;label-foreground = ${colors.primary}
click-left = "sudo powersave"

[module/btcprice]
type = custom/script
exec = /home/pooh/.config/polybar/btcprice.sh
interval = 600
label = "%output%"
format-prefix = " "

[module/usdprice]
type = custom/script
exec = /home/pooh/.config/polybar/usdprice.sh
interval = 1800
